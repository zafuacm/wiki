<script>
document.addEventListener("DOMContentLoaded", function () {
    renderMathInElement(document.body, {

        delimiters: [
            { left: '$$', right: '$$', display: true },
            { left: '$', right: '$', display: false },
            { left: '\\(', right: '\\)', display: false },
            { left: '\\[', right: '\\]', display: true },
            {left: "\\begin{equation}", right: "\\end{equation}", display: true},
        ],
        macros: {
            "\\RR": "\\mathbb{R}",
            "\\NN": "\\mathbb{N}",
            "\\QQ": "\\mathbb{Q}",
            "\\ZZ": "\\mathbb{Z}",
            "\\CC": "\\mathbb{C}",
            "\\ee": "\\mathrm{e}",
            "\\dd": "\\mathrm{d}",
            "\\eps": "\\varepsilon",
        },
        globalGroup: true,
        throwOnError: false
    });
});
</script>
